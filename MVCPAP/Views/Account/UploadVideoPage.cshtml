<div class="divLogin input-group">

    @using (Html.BeginForm("PostVideo", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <h2 class="m-auto align-content-center"> Upload video </h2>
        @*@Html.LabelFor(model => model.email)*@
        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })
        @Html.ValidationMessageFor(model => model.title)

        @*@Html.LabelFor(model => model.password)*@
        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description", @type = "text" } })
        @Html.ValidationMessageFor(model => model.description)

        <div class="custom-file mt-2">
            <input type="file" class="custom-file-input" name="file" id="inputGroupFile01"
                   aria-describedby="inputGroupFileAddon01">
            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
        </div>

        <input type="text" class="form-control" placeholder="Tags" name="tags" id="tags" />

        <input type="submit" name="name" class="btn btn-success loginbtn" value="Upload video" />
        @Html.DisplayFor(model => model.VideoUploadError)


    }

</div>


